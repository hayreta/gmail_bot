{
  "project": {
    "name": "createUnlimitedGmail-Bott",
    "version": "1.1.0",
    "description": "Premium Gmail Registration Bot",
    "main": "index.js"
  },
  "dependencies": {
    "production": [
      {
        "name": "telegraf",
        "version": "^4.16.3",
        "purpose": "Telegram bot framework for handling commands, callbacks, and middleware",
        "key_exports": ["Telegraf", "Markup", "session"],
        "usage": "Core bot functionality"
      },
      {
        "name": "dotenv",
        "version": "^17.2.3",
        "purpose": "Load environment variables from .env file",
        "key_exports": ["config()"],
        "usage": "Configuration management"
      },
      {
        "name": "lowdb",
        "version": "^5.1.0",
        "purpose": "Lightweight JSON database for persistent storage",
        "key_exports": ["JSONFile", "Database"],
        "usage": "Optional: Replace in-memory database"
      }
    ],
    "builtin": [
      {
        "name": "process",
        "purpose": "Process environment and signal handling",
        "usage": "SIGTERM/SIGINT handlers for graceful shutdown"
      },
      {
        "name": "path",
        "purpose": "File path utilities",
        "usage": "File operations"
      },
      {
        "name": "fs",
        "purpose": "File system operations",
        "usage": "Read/write files"
      }
    ]
  },
  "custom_modules": {
    "database": {
      "function": "getDB(ctx)",
      "purpose": "User data management",
      "data_structure": {
        "points": "integer",
        "referrals": "integer",
        "registered": "integer",
        "joined": "Date",
        "name": "string",
        "username": "string"
      }
    },
    "channels": {
      "purpose": "List of required verification channels",
      "channels": [
        "@Hayre37",
        "@Digital_Claim",
        "@BIgsew_community",
        "@hayrefx"
      ]
    },
    "keyboards": {
      "getMenu": "User main menu",
      "adminKeyboard": "Admin control panel",
      "cancelKeyboard": "Cancel operation button"
    },
    "middleware": {
      "checkJoin": "Force join verification",
      "session": "User session management"
    },
    "handlers": {
      "commands": ["/start", "/help", "/admin"],
      "actions": [
        "register",
        "account",
        "referrals",
        "help",
        "admin_panel",
        "stats",
        "broadcast",
        "add_points",
        "rem_points",
        "list_users",
        "back_menu",
        "verify_and_delete",
        "cancel_op",
        "broadcast_confirm"
      ]
    }
  },
  "configuration": {
    "engine": "node>=14.13.1",
    "start_command": "npm start",
    "dev_command": "npm run dev",
    "environment_variables": [
      {
        "name": "BOT_TOKEN",
        "required": true,
        "description": "Telegram Bot API token"
      }
    ]
  },
  "production_ready_features": [
    "Global error handling",
    "Graceful shutdown on SIGTERM/SIGINT",
    "Session management",
    "Channel membership verification",
    "Admin authentication",
    "User data persistence",
    "Callback-based button interactions",
    "Message copying and broadcasting"
  ]
}
